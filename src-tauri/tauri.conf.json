{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build:pvr && npm run build",
        "beforeDevCommand": "npm run build:pvr && npm run dev",
        "frontendDist": "../dist",
        "devUrl": "http://localhost:5173"
    },
    "bundle": {
        "active": true,
        "category": "DeveloperTool",
        "copyright": "Copyright (c) 2022-2025 Slav Basharov",
        "targets": "all",
        "externalBin": ["./lib/portable-vocal-remover/target/release/pvr"],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": ""
        },
        "longDescription": "",
        "macOS": {
            "entitlements": null,
            "exceptionDomain": "",
            "frameworks": [],
            "providerShortName": null,
            "signingIdentity": null
        },
        "fileAssociations": [
            {
                "ext": ["mp3", "flac", "wav", "aiff", "ape", "ogg", "m4a"],
                "name": "Music",
                "description": "Music files",
                "role": "Editor",
                "mimeType": "audio/*"
            },
            {
                "ext": ["m3u"],
                "mimeType": "application/mpegurl"
            }
        ],
        "resources": ["resources/*"],
        "shortDescription": "",
        "linux": {
            "deb": {
                "depends": []
            }
        }
    },
    "productName": "Musicat",
    "version": "0.14.0",
    "identifier": "Musicat",
    "app": {
        "macOSPrivateApi": true,
        "withGlobalTauri": true,
        "windows": [],
        "security": {
            "capabilities": [
                "main-capability",
                {
                    "identifier": "use-external-drives",
                    "description": "Capability to be able to use library on external drives",
                    "windows": ["*"],
                    "permissions": [
                        {
                            "identifier": "fs:scope",
                            "allow": ["**"]
                        }
                    ]
                }
            ],
            "assetProtocol": {
                "scope": ["**"],
                "enable": true
            },
            "csp": "default-src 'self' https://api.iconify.design  https://api.simplesvg.com https://api.unisvg.com https://www.wikidata.org https://en.wikipedia.org https://api.openai.com https://api.genius.com *.archive.org https://archive.org https://lrclib.net asset: https://asset.localhost stream: http://stream.localhost; img-src 'self' https://archive.org asset: https://asset.localhost http://asset.localhost data:; style-src 'self' 'unsafe-inline' 'unsafe-eval';script-src 'self' 'unsafe-eval'; media-src 'self' https://*.archive.org archive.org; connect-src https://www.wikidata.org https://en.wikipedia.org https://upload.wikimedia.org https://dbpedia.org *.archive.org https://archive.org ipc: http://ipc.localhost asset: https://asset.localhost"
        }
    }
}
